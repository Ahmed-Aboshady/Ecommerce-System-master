@model List<FinalProject.Models.product>
@if (Model == null)
{
    <h1>No Products</h1>
}
else
{
    @foreach (var product in Model)
    {

        <div class="col-md-3 product-men women_two shop-gd">
            <div class="product-googles-info googles" style="height:100% !important">
                <div class="men-pro-item">
                    <div class="men-thumb-item">
                        <img src="~/photos/@product.productPhoto" class="img-fluid" style="width:100% !important;max-width:100!important;height:100%!important;max-height:100%" alt="">
                        <div class="men-cart-pro">
                            <div class="inner-men-cart-pro">
                                <a href="@Url.Action("getProductDetails","subCategoryData",new {id=product.productId })" class="link-product-add-cart">Quick View</a>
                            </div>
                        </div>
                        <span class="product-new-top">New</span>
                    </div>
                    <div class="item-info-product">
                        <div class="info-product-price">
                            <div class="grid_meta">
                                <div class="product_price">
                                    <h4>
                                        <a asp-controller="subCategoryData" asp-action="getProductDetails" asp-route-productId="@product.productId">@product.productName</a>
                                    </h4>
                                    <div class="grid-price mt-2">
                                        @{
                                            var netvalue = product.productPrice - product.discountValue;
                                            if (product.discountValue > 0)
                                            {
                                                <del class="money ">$@product.productPrice</del>

                                                <span class="money ">$@netvalue</span>
                                            }
                                            else
                                            {
                                                <span class="money ">$@product.productPrice</span>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="googles single-item hvr-outline-out">
                                <form method="post" action="Index">
                                    <button type="submit" asp-route-ProductId="@product.productId" name="addCart" id="addCart" class="googles-cart pgoogles-cart">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    }
}